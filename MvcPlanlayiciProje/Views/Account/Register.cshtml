@model HomeViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Planlayıcı Kayıt Ol</h1>
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı adı:</label>
                <span asp-validation-for="UserName"></span>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Name">Ad:</label>
                <span asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="SurName">Soyad:</label>
                <span asp-validation-for="SurName"></span>
                <input asp-for="SurName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email Adres:</label>
                <span asp-validation-for="Email"></span>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password"></span>
                <input type="password" asp-for="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div>